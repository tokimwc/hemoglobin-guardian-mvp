# Firebase認証情報
FIREBASE_CREDENTIALS_PATH=./credentials/firebase-service-account.json

# Google Cloud認証情報
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud-service-account.json
GOOGLE_CLOUD_PROJECT=hemoglobin-guardian-prod

# AI APIの設定
VISION_AI_LOCATION=asia-northeast1
VERTEX_AI_LOCATION=asia-northeast1
GEMINI_MODEL_ID=gemini-1.5-pro-vision

# サーバー設定
HOST=0.0.0.0
PORT=8080
WORKERS=2

# フロントエンド設定
FRONTEND_URL=https://hemoglobin-guardian.web.app

# セキュリティ設定
CORS_ORIGINS=["https://hemoglobin-guardian.web.app"]
ALLOWED_HOSTS=["hemoglobin-backend-226832076887.asia-northeast1.run.app"]

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# パフォーマンス設定
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
RETRY_COUNT=3
RETRY_DELAY_SECONDS=1

# キャッシュ設定
CACHE_TTL_SECONDS=3600
MAX_CACHE_ITEMS=1000

# Vision AI設定
VISION_AI_LOCATION=asia-northeast1

# Vertex AI (Gemini)設定
VERTEX_AI_LOCATION=us-central1
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=1024
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40
GEMINI_TIMEOUT_SECONDS=4.0

# キャッシュ設定
ADVICE_CACHE_TTL_SECONDS=3600  # 1時間

# アプリケーション設定
APP_NAME=HemoglobinGuardian
DEBUG=True
API_VERSION=v1 